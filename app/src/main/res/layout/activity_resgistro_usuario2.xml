<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="#DAFAD9"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ResgistroUsuarioActivity2">

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="match_parent"
      android:layout_height="250dp"
      app:srcCompat="@drawable/imagen_tierra" />

  <TextView
      android:id="@+id/textView8"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingHorizontal="10dp"
      android:text="Nombre Completo:"
      android:textAlignment="textStart"
      android:textSize="20sp"
      android:textStyle="bold" />

  <EditText
      android:id="@+id/editTextText2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#F0F4EB"
      android:ems="10"
      android:hint="Digite Nombre y apellido"
      android:inputType="text"
      android:minHeight="48dp"
      android:paddingHorizontal="10dp" />

  <TextView
      android:id="@+id/textViewR"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif-black"
      android:paddingHorizontal="10dp"
      android:text="Correo:"
      android:textAlignment="viewStart"
      android:textSize="20sp" />

  <EditText
      android:id="@+id/editTextTextR"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#F0F4EB"
      android:ems="10"
      android:hint="Email"
      android:inputType="text|textEmailAddress"
      android:minHeight="48dp"
      android:paddingHorizontal="10dp" />

  <TextView
      android:id="@+id/textViewR"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif-black"
      android:paddingHorizontal="10dp"
      android:text="Contraseña:"
      android:textAlignment="textStart"
      android:textSize="20sp"
      tools:ignore="DuplicateIds" />

  <EditText
      android:id="@+id/editTextTextPasswordR"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#F0F4EB"
      android:ems="10"
      android:hint="Ingrese contraseña"
      android:inputType="textPassword"
      android:minHeight="48dp"
      android:paddingHorizontal="10dp"
      android:password="true" />

  <Button
      android:id="@+id/buttonRegist"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:backgroundTint="#4FA652"
      android:focusableInTouchMode="true"
      android:text="Registrarse"
      android:textSize="20sp" />


</LinearLayout>