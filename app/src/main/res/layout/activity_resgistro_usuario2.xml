<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="#DAFAD9"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ResgistroUsuarioActivity2">

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      app:srcCompat="@drawable/imagen_tierra"
      tools:ignore="ContentDescription,ImageContrastCheck" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_margin="10dp"
      >
    <com.google.android.material.textfield.TextInputLayout
        app:startIconDrawable="@drawable/baseline_drive_file_rename_outline_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre completo"
        android:id="@+id/name_user"
        tools:ignore="HardcodedText">

      <com.google.android.material.textfield.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="text"
          android:textColorHint="#546E7A"
          tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo Electronico"
        app:startIconDrawable="@drawable/baseline_alternate_email_24"
        tools:ignore="HardcodedText">

      <com.google.android.material.textfield.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textEmailAddress"
          tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contraseña"
        app:startIconDrawable="@drawable/baseline_block_24"
        app:endIconMode="password_toggle"
        android:id="@+id/password1_user"
        tools:ignore="HardcodedText">

      <com.google.android.material.textfield.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textPassword"
          tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Repita la Contraseña"
        app:startIconDrawable="@drawable/baseline_block_24"
        app:endIconMode="password_toggle"
        android:id="@+id/password2_user"
        tools:ignore="HardcodedText">

      <com.google.android.material.textfield.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textPassword"
          tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />

    </com.google.android.material.textfield.TextInputLayout>
  </LinearLayout>
  <Button
      android:id="@+id/buttonRegist"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:backgroundTint="#4FA652"
      android:focusableInTouchMode="true"
      android:text="Registrarse"
      android:textSize="20sp"
      tools:ignore="HardcodedText,VisualLintButtonSize" />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#93B36F"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

      <ImageView
          android:id="@+id/imageView2"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_weight="1"
          app:srcCompat="@drawable/baseline_home_24"
          tools:ignore="ContentDescription" />

      <ImageView
          android:id="@+id/imageView3"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_weight="1"
          app:srcCompat="@drawable/baseline_bar_chart_24"
          tools:ignore="ContentDescription" />

      <ImageView
          android:id="@+id/imageView4"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_weight="1"
          app:srcCompat="@drawable/baseline_person_24"
          tools:ignore="ContentDescription" />

      <ImageView
          android:id="@+id/imageView5"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_weight="1"
          app:srcCompat="@drawable/baseline_logout_24"
          tools:ignore="ContentDescription" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>